	margin-top: 0px !important;
}
.feature h4 {
	@media #{$medium-up} {
		margin-top: 200px;
	}
}
.nightlife {
	padding-top: 20px;
}
.matching,
.network {
	height: 500px;
	position: relative;
	img {
		position: absolute;
		left: 55%;
		bottom: 0px;
		max-width: 250px;
	}
	@media #{$small-only} {
		height: 600px;
		img {
			right: 10%;
			left: auto;
			bottom: 0px;
			height: 320px;
			width: auto;
		}
	}
	&.network {
		height: 560px;
		img {
			max-width: 350px;
				@media #{$small-only} {
					height: 300px;
				}
		}
	}
}
.chatting {
	height: 500px;
	position: relative;
	img {
		position: absolute;
		bottom: 0px;
		left: 5%;
		max-width: 350px;
	}
	@media #{$medium-up} {
		.chats-img {
			left: 20%;
		}
		.chatting-img {
			left: 25%;
		}
	}
	@media only screen and (min-width: 41em) and (max-width: 55em) {
		.chats-img {
			left: 1%;
		}
		.chatting-img {
			left: 10%;
		}
	}
	@media #{$small-only} {
		height: 600px;
		img {
			bottom: 0px;
			height: 300px;
			width: auto;
		}
		.chats-img {
			left: 5%;
		}
		.chatting-img {
			right: 2%;
		}
	}
}
.what-is {
	padding-bottom: 0px;
	height: 600px;
	position: relative;
	.image {
		position: absolute;
		bottom: 0px;
		height: 450px;
		img {
			position: absolute;
			bottom: 0px;
			left: 40%;
			max-width: 250px;
		}
		@media #{$small-only} {
			position: relative;
			height: 275px;
			img {
				// position: initial;
				height: 275px;
			}
		}
	}
	@media #{$small-only} {
		height: 700px;
	}
}

