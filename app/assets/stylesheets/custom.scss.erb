	box-shadow: none;
}

.top-bar-section ul li:not(.has-form) {
	margin-right: 5px;
	background: none !important;
	-webkit-transition: all .1s linear;
	-moz-transition: all .1s linear;
	transition: all .1s linear;

	@media #{$medium-up} {
		padding-top: 13px;
	}

	&.divider {
		width: 30px;
		background: none !important;
		border-color: transparent;
		@media #{$small-only} {
			display: none;
		}
	}
	a:not(.button) {
		line-height: 3 !important;
		margin-top: 12px;
		border-radius: 5px;
		background: transparent;
		@media #{$medium-up} {
			display: inline;
		}
		-webkit-transition: color .5s ease;
		-moz-transition: color .5s ease;
		transition: color .5s ease;
	}
	a.active {
		border: 1px solid #111;
		display: inline-block;
		margin-top: 0px;
	}
	a.sign-in {
		display: inline;
		text-transform: none;
	}
	&.nav-alt {
		font-family: "GothamBook";
		padding-top: 13px;
		font-size: rem-calc(13);
	}
	&.social-link  {
		padding-top: 0px;
		> a {
			margin-top: 20px;
			background-color: none;
			width: 22px;
			height: 22px;
			display: block;
		}

		a:not(.button).fb {
			background: url(<%= asset_path 'facebook.png' %>) no-repeat center;// -37px 0px !important;
			background-size: contain;
			&:hover {
				background: url(<%= asset_path 'facebook.png' %>) no-repeat center;// -37px 0px !important;
				background-size: contain;
			}
			&.green {
				background: url(<%= asset_path 'facebook-green.png' %>) no-repeat center !important;
				background-size: contain !important;
			}
		}
		 a:not(.button).tw {
			background: url(<%= asset_path 'twitter.png' %>) no-repeat center;// -37px 0px !important;
			background-size: contain;
			&:hover {
				background: url(<%= asset_path 'twitter.png' %>) no-repeat center;// -37px 0px !important;
				background-size: contain ;
			}
			&.green {
				background: url(<%= asset_path 'twitter-green.png' %>) no-repeat center !important;
				background-size: contain !important;
			}
		}
		 a:not(.button).ig {
			background: url(<%= asset_path 'insta.png' %>) no-repeat center;// -77px 0px !important;
			background-size: contain;
			&:hover {
				background: url(<%= asset_path 'insta.png' %>) no-repeat center;// -37px 0px !important;
				background-size: contain;
			}
			&.green {
				background: url(<%= asset_path 'insta-green.png' %>) no-repeat center !important;
				background-size: contain !important;
			}
		}
		// &.yt {
		// 	background: url(<%= asset_path 'social.png' %>) no-repeat -115px 0px !important;
		// }
	}
	@media #{$small-only} {
		padding: 0 5px;
	}
	&.social-link {
			@media #{$small-only} {
			display: inline-block;
		}
	}

}

