<% body_class "venue-login" %>
<% content_for :title , "Yero Venue Forgot Password" %>


<section class="page-content get-in-touch-content padding text-center">
	<div class="row">

		<div class="medium-8 medium-centered columns">
			<h3>Forgot your password?</h3>
		</div>
	</div>
	<div class="row">

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  	<div class="medium-4 medium-centered columns email-form">
				<div>
					<div class="">
						<%= devise_error_messages! %>
					</div>
					<div class="email-input">
					  <%= f.email_field :email, autofocus: true, :placeholder=>"Email" %>
					</div>
					<div class="">
						<%= f.submit "Send me reset password instructions", :class => 'button expand' %>
					</div>
				</div>
			</div>
		<% end %>
	</div>
	<div class="row">
		<div class="medium-4 medium-centered columns">
			<%= render "web_users/shared/links" %>
		</div>
	</div>
</div>

