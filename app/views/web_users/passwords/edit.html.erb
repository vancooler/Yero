<% body_class "venue-login" %>
<% content_for :title , "Yero Venue Forgot Password" %>


<section class="page-content get-in-touch-content padding text-center">
	<div class="row">

		<div class="medium-8 medium-centered columns">
			<h3>Change your password</h3>
		</div>
	</div>
	<div class="row">

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
		  	<div class="medium-4 medium-centered columns email-form">
				<div>
					<div class="">
						<%= devise_error_messages! %>
					</div>
					<div class="psssword-input">
					  <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
					</div>
					<div class="psssword-input">
					  <%= f.password_field :password_confirmation, autocomplete: "off" %>
					</div>
					<div class="">
						<%= f.submit "Change my password", :class => 'button expand' %>
					</div>
				</div>
			</div>
		<% end %>
	</div>
	<div class="row">
		<div class="medium-4 medium-centered columns">
			<%= render "web_users/shared/links" %>
		</div>
	</div>
</div>

