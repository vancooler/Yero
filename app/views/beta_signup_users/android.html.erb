<section class="page-content android-content padding text-center">
	<div class="row">
		<div class="medium-8 medium-centered columns">

			<%- # image_tag "shades.png", :class=>'shades-img' -%>

			<p>Unfortunately, YERO is not ready for Android users.</p>
		</div>

		<div class="medium-3 medium-centered columns">
			<hr>
		</div>

		<div class="medium-8 medium-centered columns">
			<p>Want to know when it is? <br>
				Submit your information below and we'll make sure to notify you!
			</p>
		</div>
		<%= form_for @beta_signup_user, :html => { :honeypot => true } do |f| -%>

		<div class="medium-4 medium-centered columns email-form">
			<div class="form">
				<%= f.hidden_field :city, :value => @beta_signup_user.city %>
				<%= f.hidden_field :phone_type, :value => @beta_signup_user.phone_type %>
				<div class="email-input">
					<!-- <input type="email" placeholder="Email"> -->
					<%= f.email_field :email, :placeholder => "Email",:required => true %>
				</div>
				<div class="phone-input">
					<!-- <input type="text" placeholder="Phone model"> -->
					<%#= f.text_field :phone_model, :placeholder => "Phone model",:required => true %>
        			<%= f.select :phone_model, options_for_select(@models, f.object.phone_model),{:include_blank => 'Phone model'}, :required => true, :placeholder => "Phone model"%>
				</div>
				<div class="city-input">
					<!-- <input type="text" placeholder="City"> -->
					<%= f.text_field :email, :placeholder => "City",:required => true %>
				</div>
				<div class="">
					<!-- <input type="submit" value="Submit" class="button small"> -->
					<%= f.submit "submit", :class => 'button expand' %>
				</div>
			</div>
		</div>
		<% end -%>

	</div>
</section>